<h2>Sign up</h2><br />

<% resource.build_profile %>
<%= semantic_form_for(resource, :as => resource_name,
											 					:url => registration_path(resource_name),
											 					:multipart => true) do |f| %>

  <%= devise_error_messages! %>
	
	<%= f.inputs do %>

	<%= f.semantic_fields_for :profile do |p| %>
	
		<%= p.input :first_name %>
		<%= p.input :last_name %>
	  <%= p.input :picture %>
		<%= p.input :height,
								:as => :select,
								:collection => ["5 0", "5 1", "5 2", "5 3"]%>
		<%= p.input :body_type,
								:as => :select,
								:collection => ["Thin", "Average", "Fit", "Plus Size"] %>
	<% end %>
	  
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <% end %>

	<%= f.buttons do %>
		<%= f.commit_button %>
	<% end %>
	
<% end %>

<%= render :partial => "devise/shared/links" %>
